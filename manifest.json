{
  "name": "木戈的插件",
  "version": "0.0.2",
  "manifest_version": 2,

  //background
  "background": {
    "page": "background.html"
  },

  // 简单描述
  "description": "代码绞肉机",
  "icons": {
    "128": "image/monkey.png"
  },
  // 选择默认语言
  //"default_locale": "en",

  // 浏览器小图表部分
  "browser_action": {
    "default_title": "代码绞肉机",
    "default_icon": "image/monkey.png",
    "default_popup": "html/test.html"
  },

  // 引入一个脚本
  "content_scripts": [
    {
      "js": ["js/test.js"],
      // 在什么情况下使用该脚本
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  // 应用协议页面
  "permissions": ["proxy", "webRequest", "webRequestBlocking", "http://*/*", "https://*/*"]
}